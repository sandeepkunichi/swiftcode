# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

GET     /admin                      controllers.admin.HomeController.index()
POST    /test/create                controllers.admin.HomeController.createTest()
GET     /test/edit/:testId          controllers.admin.HomeController.editTestView(testId: Long)
GET     /test/clone/:testId         controllers.admin.HomeController.cloneTest(testId: Long)
POST    /test/edit                  controllers.admin.HomeController.editTest()
DELETE  /test/delete/:testId        controllers.admin.HomeController.deleteTest(testId: Long)
POST    /test/activate/:testId      controllers.admin.HomeController.activateTest(testId: Long)
POST    /test/deactivate/:testId    controllers.admin.HomeController.deactivateTest(testId: Long)
GET     /test/stats/:testId         controllers.admin.StatsController.getTestStats(testId: Long)
GET     /user/stats/:userId         controllers.admin.StatsController.getUserStats(userId: Long)
GET     /test/session/stats/:id     controllers.admin.StatsController.getTestSessionStats(id: Long)
DELETE  /test/session/:sessionId    controllers.admin.HomeController.deleteSession(sessionId: Long)

GET     /test/start/:testId         controllers.test.TestSessionController.startTest(testId: Long)
POST    /test/submit                controllers.test.TestSessionController.submitTest()

GET     /dashboard                  controllers.dashboard.HomeController.index()

GET     /login                      controllers.LoginController.login()
GET     /logout                     controllers.LoginController.logout()
POST    /login                      controllers.LoginController.authenticate()

GET     /                           controllers.SignupController.loadSignupPage()
GET     /signup                     controllers.SignupController.loadSignupPage()
POST    /signup                     controllers.SignupController.signup()

GET    /test/liveClock/:id          controllers.test.TimerController.streamClock(id: Long)

GET    /external_auth               controllers.LoginController.externalLogin()
GET    /messages/:channelId         controllers.dashboard.HomeController.getMessages(channelId: String)

POST   /resume/upload               controllers.dashboard.HomeController.uploadResume

GET    /slack                       controllers.dashboard.HomeController.slackRedirect

POST   /program/execute             controllers.engine.ProgramController.execute

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /stylesheets/*file          @controllers.Assets.at(path="/public/stylesheets", file)
GET     /javascripts/*file          @controllers.Assets.at(path="/public/javascripts", file)
GET     /images/*file               @controllers.Assets.at(path="/public/images", file)
